<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
    </style>
    <style name="AppThemeLogo" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:actionBarStyle">@style/AppTheme.ActionBarLogo</item>

        <item name="android:windowContentOverlay">@null</item>
    </style>
    <style name="AppTheme.ActionBarLogo" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@android:color/black</item>
        <item name="android:logo">@drawable/financemanager_logo_horizontal</item>
        <item name="android:icon">@drawable/financemanager_logo_horizontal</item>
        <item name="android:displayOptions">useLogo|showHome|showTitle</item>
    </style>
</resources>
